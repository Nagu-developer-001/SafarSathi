    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
        <%for(list of allListing){%>
            <a href="http://localhost:8080/listings/<%= list._id %>" class="listing-anch">
                <div class="card col card-list">
                    <img src="<%=list.image.url%>" class="card-img-top" alt="...">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <p class="card-text"><b><%= list.title %></b><br>
                        Price :&#8377;<b class="price-tag"><%= list.price.toLocaleString("en-IN") %></b></p>
                        &nbsp;&nbsp;&nbsp;<i class="taxation">+18% GST</i>
                    </div>
                </div>
            </a>
            <%}%>
    </div>
<script>
    let priceTag = document.querySelectorAll(".card-text .price-tag");
    let pcopy = priceTag.innerText.replace(/,/g, '');
    let tax = document.querySelectorAll(".taxation");
    console.log(tax);
    let toggle = document.querySelector("#flexSwitchCheckDefault");
    console.log(toggle);
    toggle.addEventListener("click",(e)=>{
        for(info of tax){
            if(info.style.display != "inline"){
            info.style.display = "inline";
            for(price of priceTag){
        //let p =Number(price.innerText);
        let p = price.innerText.replace(/,/g, '');
        //console.log("price list - ",p)
        //console.log(price.innerText)
        sell = Math.floor((p*18)/100);
        let sum = eval(Number(p)+sell);
        console.log(sum);
        price.innerText = sum;
    }
        }else{
            info.style.display = "none";
            price.innerText = pcopy;
        }
        }
        
    });
    // toggle.addEventListener("click",(e)=>{
    //     tax.style.disply = "inline";
    // });
</script>