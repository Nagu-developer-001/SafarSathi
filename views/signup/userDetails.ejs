<%- layout("/layout/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="http://localhost:8080/updataUser" method="post" class="needs-validation" novalidate autocomplete="off">
                
                <!-- Name Field -->
                <div class="mb-2">
                    <label for="username" class="form-label">Name :</label>
                    <div class="input-container">
                        <input type="text" id="username" name="username" required class="form-control" value="<%= user.username %>">
                        <i class="fa-solid fa-pen-fancy icon"></i>
                    </div>
                </div>

                <!-- Email Field -->
                <div class="mb-2">
                    <label for="email" class="form-label">Email :</label>
                    <div class="input-container">
                        <input type="email" id="email" name="email" required class="form-control" value="<%= user.email %>">
                        <i class="fa-solid fa-pen-fancy icon"></i>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <style>
        .input-container {
            position: relative;
        }

        .input-container input {
            padding-right: 35px; /* Space for the icon */
        }

        .input-container .icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d; /* Bootstrap text-muted color */
        }
    </style>
</body>